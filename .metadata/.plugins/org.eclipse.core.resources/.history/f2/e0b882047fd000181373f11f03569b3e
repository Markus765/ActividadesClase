package condicionales;

import java.util.Scanner;

public class Ejercicio16 {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

		int mes;
		int anyo;

		System.out.println("Dime el número de mes: ");
		mes = entrada.nextInt();
		System.out.println("Dime el año: ");
		anyo = entrada.nextInt();

		switch (mes) {

		case 1:
		case 3:
		case 5:
		case 7:
		case 8:
		case 10:
		case 12:
			System.out.println("Este mes tiene 31 días.");
			break;
		case 2:
			System.out.println("Este mes tiene 28 días.");
			break;
		case 4:
		case 6:
		case 9:
		case 11:
			System.out.println("Este mes tiene 30 días.");
		default:
			System.out.println("El número de mes tiene que estar entre 1 y 12");
		}

	}

}
